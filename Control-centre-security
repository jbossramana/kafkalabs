1.control-center.properties

# Security configuration
confluent.controlcenter.auth.enabled=true
confluent.controlcenter.auth.credentials.provider=provider-file
confluent.controlcenter.auth.credentials.provider.file.credentials=/home/ubuntu/Desktop/kafka/confluent-7.0.1/etc/confluent-control-center/password.properties
confluent.controlcenter.auth.credentials.provider.file.role.definition=/home/ubuntu/Desktop/kafka/confluent-7.0.1/etc/confluent-control-center/roles.properties
confluent.controlcenter.auth.credentials.provider.file.refresh=30m
confluent.controlcenter.auth.credentials.provider.file.auto.create.topics=false
confluent.controlcenter.auth.credentials.provider.file.auto.create.topics.num.partitions=1
confluent.controlcenter.auth.credentials.provider.file.auto.create.topics.replication.factor=1
confluent.controlcenter.auth.credentials.provider.file.auto.create.topics.config=null
confluent.controlcenter.rest.authentication.method=BASIC
confluent.controlcenter.rest.authentication.realm=Confluent Control Center
confluent.controlcenter.rest.authentication.roles.admin=admin
confluent.controlcenter.rest.authentication.roles.readonly=readonly
confluent.controlcenter.rest.authentication.roles.dashboard-only=dashboard-only


